{
  "env": {
      "browser": true,
      "es2020": true
  },
  "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
  },
  "settings": {
    "import/extensions": [
      ".ts"
    ],
    "import/parsers": {
      "@typescript-eslint/parser": [".ts"]
    },
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      }
    }
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
    "import/extensions": ["error", "ignorePackages", {
      "js": "never",
      "ts": "never"
    }]
  }
}
